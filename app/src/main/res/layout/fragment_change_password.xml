<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="changePswdVM"
            type="com.example.facebook.viewmodels.ChangePasswordViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/change_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="150dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/change_password_tv"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/change_password_tv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint=""
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_id_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/username_tv"
                android:layout_marginTop="20dp"
                android:enabled="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_id_tv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/enter_new_password_tv"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_name_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/re_enter_pswd_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/new_password_tv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/re_enter_password_tv"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            app:passwordToggleEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/re_enter_password_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#E62B77E8"
            android:text="@string/reset_password_tv"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="15dp"
            android:textSize="16sp"
            android:onClick="@{()->changePswdVM.resetPasswordBtn()}"
            app:shapeAppearanceOverlay="@style/roundedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/re_enter_pswd_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>